                <script>
                    // Sample script to handle like and view counts
                    let likeCount = 0;
                    let viewCount = 0;

                    document.getElementById('like').addEventListener('click', function () {
                        if (this.classList.contains('clicked')) {
                            likeCount--;
                            this.classList.remove('clicked');
                            this.style.color = '#666'; // Reset to default color
                        } else {
                            likeCount++;
                            this.classList.add('clicked');
                            this.style.color = 'red'; // Change color to red
                        }
                        document.getElementById('likeCount').innerText = likeCount;
                    });

                    // Increment view count on page load
                    window.onload = function () {
                        viewCount++;
                        document.getElementById('viewCount').innerText = viewCount;
                    };

                    // Function to add a comment with user profile details
                    function addComment() {
                        const commentBox = document.getElementById('comment-box');
                        const comment = commentBox.value.trim();

                        if (comment !== "") {
                            const commentContainer = document.getElementById('comments-container');
                            const commentElement = document.createElement('div');
                            commentElement.classList.add('comment');
                            commentElement.innerHTML = `
                <div class="user-profile">
                    <img src="https://img.icons8.com/ios-filled/50/000000/user-male-circle.png" alt="User Avatar" class="avatar">
                    <span class="username">Jane Doe</span>
                </div>
                <div class="comment-content">
                    <p>${comment}</p>
                    <span class="comment-timestamp">Just now</span>
                </div>
            `;
                            commentContainer.appendChild(commentElement);
                            commentBox.value = "";  // Clear the comment box
                        }
                    }
