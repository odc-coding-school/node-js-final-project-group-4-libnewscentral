        .icons {
            display: flex;
            justify-content: flex-start;
            margin-top: 20px;
        }

        .icon {
            display: flex;
            align-items: center;
            margin-right: 20px;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .icon img {
            width: 28px;
            height: 28px;
            margin-right: 8px;
        }

        .icon span {
            font-size: 18px;
            color: #666;
        }

        #like {
            color: #666;
        }

        #like.clicked {
            color: red;
        }

        .comments-section {
            margin-top: 40px;
            background: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
        }

        .comment {
            display: flex;
            margin-bottom: 20px;
            padding: 15px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.05);
        }

        .user-profile {
            width: 50px;
            margin-right: 15px;
            text-align: center;
        }

        .user-profile .avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

        .user-profile .username {
            font-weight: bold;
            font-size: 0.9em;
            margin-top: 5px;
            color: #333;
        }

        .comment-content {
            flex: 1;
            padding: 10px 15px;
            border-radius: 10px;
            background: #f7f7f7;
        }

        .comment-content p {
            margin: 0;
        }

        .comment-timestamp {
            display: block;
            color: #aaa;
            font-size: 0.9em;
            margin-top: 5px;
        }

        .add-comment {
            margin-top: 30px;
        }

        .add-comment textarea {
            width: 100%;
            height: 100px;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            font-size: 1em;
        }

        .add-comment button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-comment button:hover {
            background-color: #0056b3;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        ul li {
            display: inline;
            margin-right: 15px;
        }

        ul li a {
            text-decoration: none;
            color: #000;
            font-size: 18px;
        }

        ul li a:hover {
            color: #007bff;
        }

        ul li a i {
            margin-right: 5px;
        }


        /* Container to center the button */
        .view-more-container {
            display: flex;
            justify-content: center;
            margin: 20px 0;
            /* Add space around the button */
        }

        /* Link Styling */
        .view-more-container a {
            text-decoration: none;
            /* Remove underline from link */
        }

        /* View More Button Styles */
        .view-more-btn {
            display: inline-block;
            background: linear-gradient(45deg, #4CAF50, #00C853);
            color: #fff;
            padding: 12px 25px;
            border: none;
            border-radius: 50px;
            /* Rounded corners */
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            /* Add subtle shadow */
            transition: all 0.3s ease;
            /* Smooth transition effect */
        }

        /* Hover effect */
        .view-more-btn:hover {
            background: linear-gradient(45deg, #00C853, #4CAF50);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
            /* Increase shadow on hover */
            transform: translateY(-2px);
            /* Lift button */
        }

        /* Optional: Add active effect */
        .view-more-btn:active {
            transform: translateY(0);
            /* Remove lift effect */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            /* Restore original shadow */
        }
    </style>
