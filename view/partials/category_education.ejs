<div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
    <div class="whats-news-caption">
      <div class="row">
        <% news.forEach(item => { %> <!-- Iterate through the news array -->
            <div class="col-lg-6 col-md-6">
                <div class="single-what-news mb-100">
                    <div class="what-img">
                        <% if (item.imageUrl) { %>
                            <!-- Use the proxy route to fetch and display the image -->
                            <img src="/proxy-image?url=<%= encodeURIComponent(item.imageUrl) %>" alt="News Image" style="max-width: 600px; height: auto;">
                        <% } else { %>
                            <p>No image available for this news article.</p>
                        <% } %>
                    </div>
                    <div class="what-cap">
                        <span class="color1">
                            <%= item.source %> <!-- Display news source -->
                        </span>
                        <h4>
                            <a href="<%= item.link %>">
                                <%= item.title %> <!-- Display news title -->
                            </a>
                        </h4>
                        <a href="/details/<%= item.id %>" id="details-btn">Details</a> <!-- Link to news details page -->
                    </div>
                </div>
            </div>
        <% }); %> <!-- End of iteration -->
    </div>
    </div>
  </div>